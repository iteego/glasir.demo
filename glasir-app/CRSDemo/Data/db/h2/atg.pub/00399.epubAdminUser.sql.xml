<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
             http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd">

    <!--
       The glasir data import depends on components that indirectly load the SecureFileRepository and SecurePriceLists.
       These components in turn depend on the epubSuperAdmin role to be defined.
       In order to avoid a chicken-and-egg conflict, make sure the role is sitting in the table.
       It will be overridden later on by an actual user/role import file, so this maneuver is purely cosmetic.
    -->

    <changeSet id='changeset_atg_ootb' author='Marcus Pemer' context='all'>
        <preConditions>
            <sqlCheck expectedResult="0">select count(1) from dpi_role where role_id='epubAdmin' and version=0</sqlCheck>
        </preConditions>
        <insert tableName="dpi_role">
            <column name="role_id" value="epubAdmin"/>
            <column name="type" valueNumeric="2000"/>
            <column name="version" valueNumeric="0"/>
            <column name="name" value="EPub-Admin"/>
            <column name="description" value="This role allows access to Publishing administrative data"/>
        </insert>
        <rollback>
            <delete tableName="dpi_role">
                <where>roleid='epubAdmin' and version=0</where>
            </delete>
        </rollback>
    </changeSet>
</databaseChangeLog>
